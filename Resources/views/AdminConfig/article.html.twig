{% extends 'BlackConfigBundle:AdminConfig:base.html.twig' %}

{% block content_top %}
    {% include 'BlackAdminBundle:Admin:contentTop.html.twig' with {'title': "admin.adminConfig.contentTop.article.title"} %}
{% endblock %}
{% block page_content %}
<div class="fluid">

    <form id="validate" novalidate class="main grid9" action="{{ path('admin_config_article') }}" method="post" {{ form_enctype(form) }}>
        {% include 'BlackAdminBundle:AdminForm:fieldset.html.twig' with {'form': form, 'title': "admin.adminConfig.fieldset.article.title"} %}
    </form>

    <div class="grid3">
        <div class="widget">
            <div class="whead"><h6>{% trans from "views" %}admin.adminConfig.whead.article.actions.text{% endtrans %}</h6><div class="clear"></div></div>
            <div class="body">
                <input type="submit" value="{% trans from "views" %}admin.adminConfig.body.article.submit.value{% endtrans %}" form="validate" class="buttonM bGreen floatL" /><div class="clear"></div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
